/* areaSelection begin */
.area-sel-box {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 110;
}
.area-sel-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,.5);
  z-index: 2;

}
.area-sel-container {
  position: absolute;
  bottom: 0;
  flex-direction: column;
  background-color: #fff;
  width: 100%;
  height: 778rpx;
  border-radius: 8rpx 8rpx 0 0;
  font-size: 28rpx;
  z-index: 10;
}
.area-sel-head {
  padding-left: 44rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 32rpx;
  color: #2E2E2E;
  font-weight: bold;
}
.area-sel-head text {
  width: 100%;
}
.area-sel-close {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 60rpx;
  height: 60rpx;
}
.area-sel-close .close-icon {
  margin: 10rpx 0 0 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.area-sel-body {
  color: #2E2E2E;
}
.area-sel-tabs {
  display: flex;
  padding-left: 20rpx;
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #D8D8D8;
  text-align: center;
}
.area-sel-tabs view {
  position: relative;
  flex: none;
  margin-right: 20rpx;
  width: 162rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.area-cur {
  font-weight: bold;
}
.area-cur::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -46rpx;
  width: 92rpx;
  height: 6rpx;
  background-color: #C7A26A;
}
.area-sel-scroll {
  padding-left: 44rpx;
  height: 622rpx;
}
.area-sel-scroll .area-item {
  padding: 16rpx 0;
}
.area-sel-scroll .area-item:first-child {
  margin-top: 24rpx;
}
.area-sel-scroll .selected {
  position: relative;
  color: #C7A26A;
  font-weight:800;
}
.area-sel-scroll .selected::after {
  content: '';
  display: block;
  position: absolute;
  right: 86rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 33rpx;
  height: 21rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 33rpx 21rpx;
}
/* areaSelection end */