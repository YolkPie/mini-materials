.black-mask {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  z-index: 10000;
}
.black-mask_close {
  margin-top: 12rpx;
  width: 72rpx;
  height: 72rpx;
  background: url(https://img10.360buyimg.com/imagetools/jfs/t1/89448/24/974/1270/5db6e101Ecad6c5e6/0ce2307fac3d3c97.png) no-repeat center;
  background-size: 48rpx;
}
