.filter-box {
  margin-top      : 20rpx;
  padding         : 0 9rpx;
  display         : flex;
  align-items     : center;
  justify-content : flex-start;
  background-color: #fff;
  position        : relative;
}

.filter-box-item {
  display        : flex;
  align-items    : center;
  justify-content: flex-start;
}

.filter-box-item text {
  color      : #2E2E2E;
  font-size  : 30rpx;
  line-height: 40rpx;
}

.filter-box-item .filter-box-item-isactive {
  color: #C7A26A;
}

.filter-box-item image {
  width      : 14rpx;
  height     : 8rpx;
  margin-left: 8rpx;
}

.filter-box-item {
  margin-left: 90rpx;
}

.filter-box-item:nth-child(1) {
  margin-left: 0;
}

.filter-box-bg {
  position        : absolute;
  top             : 44rpx;
  left            : -24rpx;
  background-color: rgba(0, 0, 0, 0.6);
  height          : 100vh;
  width           : 100vw;
}