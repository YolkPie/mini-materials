.option-tabs {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  color: #2E2E2E;
  background-color: #fff;
  z-index: 10;
}
.option-tabs-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  flex-shrink: 0;
  padding: 0 50rpx;
  height: 100%;
  text-align: center;
}
.option-tabs-item .tab-split {
  position: absolute;
  top: 50%;
  right: 0;
  width: 2rpx;
  height: 37rpx;
  transform: translateY(-50%);
  background-color: #D8D8D8 ;
}
.option-tabs-item-current {
  color: #C7A26A;
  font-weight:bold;
}
.option-tabs-item-current .tab-bar {
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  width: 58rpx;
  height: 6rpx;
  transform: translateX(-50%);
  background: linear-gradient(315deg, #C7A26A 0%, #D8BC91 100%);
}
