/* MultiFilterList begin */
.filter-list-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,.5);
  z-index: 10;
}
.filter-list-container {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #fff;
  z-index: 10;
}

.sel-value {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 20rpx;
  height: 100%;
  font-size: 28rpx;
  color: #747474;
}
.sel-value-left text {
  display: inline-block;
  max-width: 88rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sel-arrow-icon {
  margin-left: 10rpx;
  width: 20rpx;
  height: 10rpx;
}

/* 多级筛选列表的样式 start */
.filter-list-box {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 608rpx;
  border-top: 1px solid #F5F5F5;
}
.filter-list-column {
  flex: none;
  height: 608rpx;
  box-sizing: border-box;
  overflow-x: hidden;
}
.filter-list-column .filter-list-item:first-child {
  padding-top: 40rpx;
}

.filter-list-first {
  width: 208rpx;
  background-color: #F5F5F5;
}
.filter-list-second {
  flex: 1;
}
.filter-list-third {
  width: 308rpx;
}
.filter-list-scroll {
  width: 110%;
  height: 100%;
}
.filter-list-column .filter-list-item {
  padding: 16rpx 5rpx 16rpx 60rpx;
  font-size: 28rpx;
  color: #2E2E2E;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.filter-list-first .filter-list-item {
  width: 208rpx;
  box-sizing: border-box;
}
.filter-list-third .filter-list-item {
  width: 308rpx;
  box-sizing: border-box;
}
.filter-list-column .selected {
  color: #C7A26A;
  font-weight: bold;
}
/* 多级筛选列表的样式 end */

/* MultiFilterList end */
